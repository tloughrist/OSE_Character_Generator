<%= turbo_frame_tag "login" do %>
  <%= link_to "Login", welcome_index_url, data: { turbo_frame: "_top" }  %>
  <div class="card card-side bg-base-100 shadow-xl">
    <figure><img
      src='/img/tramp_minotaur.jpg'
      alt="Might minotaur"
      class="h-80"
    /></figure>
    <div class="card-body">
      <%= form_with do |form| %>
        <div>
          <%= form.label :username, "Username" %>
          <%= form.text_field :username %>
        </div>
        <div>
          <%= form.label :password, "Password" %>
          <%= form.text_field :password %>
        </div>
        <div>
          <%= form.label :rep_password, "Re-enter Password" %>
          <%= form.text_field :rep_password %>
        </div>
        <div>
          <%= form.label :email, "Email" %>
          <%= form.email_field :email %>
        </div>
        <%= form.submit "Submit" %>
      <% end %>
    </div>
  </div>
<% end %>