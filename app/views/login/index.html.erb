<div class="card lg:card-side bg-zinc-200 shadow-xl ml-6">
  <figure><img
    src='/img/tramp_minotaur.jpg'
    alt="Might minotaur"
    class="h-80"
  /></figure>
  <div class="card-body">
    <%= turbo_frame_tag "login" do %>
      <%= form_with do |form| %>
        <div>
          <%= form.label :username, "Username" %>
          <%= form.text_field :username %>
        </div>
        <div>
          <%= form.label :password, "Password" %>
          <%= form.text_field :password %>
        </div>
        <%= form.submit "Submit" %>
      <% end %>
      <%= link_to "Create Account", login_signup_url %>
      <%= link_to "Forgot password?", login_forgotpassword_url %>
    <% end %>
  </div>
</div>